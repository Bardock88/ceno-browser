<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/theme_category"
        android:layout="@layout/preference_category_style">

        <androidx.preference.Preference
            app:iconSpaceReserved="false"
            android:key="@string/pref_key_about_ouinet_protocol"
            android:title="@string/preferences_about_ouinet_protocol" />

        <androidx.preference.Preference
            app:iconSpaceReserved="false"
            android:key="@string/pref_key_ouinet_reachability_status"
            android:defaultValue="false"
            android:enabled="true"
            android:title="@string/preferences_ceno_sources_reachability" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/udp_category"
        android:layout="@layout/preference_category_style">

        <androidx.preference.Preference
            app:iconSpaceReserved="false"
            android:key="@string/pref_key_ouinet_local_udp_endpoints"
            android:defaultValue="false"
            android:enabled="true"
            android:title="@string/preferences_ceno_sources_local_udp" />

        <androidx.preference.Preference
            app:iconSpaceReserved="false"
            android:key="@string/pref_key_ouinet_external_udp_endpoints"
            android:defaultValue="false"
            android:enabled="true"
            android:title="@string/preferences_ceno_sources_external_udp" />

        <androidx.preference.Preference
            app:iconSpaceReserved="false"
            android:key="@string/pref_key_ouinet_public_udp_endpoints"
            android:defaultValue="false"
            android:enabled="true"
            android:title="@string/preferences_ceno_sources_public_udp" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/clear_button_category"
        android:layout="@layout/preference_category_style">

        <androidx.preference.SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            android:key="@string/pref_key_clear_in_toolbar"
            android:defaultValue="true"
            android:title="@string/preferences_clear_in_toolbar"/>

        <androidx.preference.SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            android:key="@string/pref_key_clear_in_menu"
            android:defaultValue="true"
            android:title="@string/preferences_clear_in_menu"/>

        <ListPreference
            app:iconSpaceReserved="false"
            android:key="@string/pref_key_clear_behavior"
            android:title="@string/preferences_clear_behavior"
            android:summary="@string/preferences_clear_behavior_summary"
            android:defaultValue="@string/preferences_clear_behavior_default"
            android:entryValues="@array/preferences_clear_behavior_values"
            android:entries="@array/preferences_clear_behavior_options"/>

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>